<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<import resource="batch_context.xml"/>
	<bean name="bcnxTxnJobQuartz" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="com.bcnx.web.app.service.task.scheduler.BcnxTxnJobQuartz" />
		<property name="jobDataAsMap">
		  <map>
			<entry key="batchJobTxn" value-ref="batchJobTxn" />
		  </map>
		</property>
		<property name="durability" value="true" />
	</bean>
	<bean id="bcnxTxnJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="bcnxTxnJobQuartz" />
		<property name="cronExpression" value="0 0 1 * * ?" />
	</bean>
</beans>
