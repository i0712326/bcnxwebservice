<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<import resource="datasource.xml"/>
	<bean id="disputeTxnDao" class="com.bcnx.web.app.service.dao.DisputeTxnDaoImp">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="disputeTxnService" class="com.bcnx.web.app.service.DisputeTxnServiceImp">
		<property name="disputeTxnDao" ref="disputeTxnDao"/>
	</bean>
	<bean id="copyRequestDao" class="com.bcnx.web.app.service.dao.CopyRequestDaoImp" parent="disputeTxnDao"/>
	<bean id="chargebackDao" class="com.bcnx.web.app.service.dao.ChargebackDaoImp" parent="disputeTxnDao"/>
	<bean id="adjustmentDao" class="com.bcnx.web.app.service.dao.AdjustmentDaoImp" parent="disputeTxnDao"/>
	<bean id="representDao" class="com.bcnx.web.app.service.dao.RepresentDaoImp" parent="disputeTxnDao"/>
	
	<bean id="copyRequestService" class="com.bcnx.web.app.service.CopyRequestServiceImp">
		<property name="disputeTxnDao" ref="copyRequestDao"/>
	</bean>
	<bean id="chargebackService" class="com.bcnx.web.app.service.ChargebackServiceImp">
		<property name="disputeTxnDao" ref="chargebackDao"/>
	</bean>
	<bean id="adjustmentService" class="com.bcnx.web.app.service.AdjustmentServiceImp">
		<property name="disputeTxnDao" ref="adjustmentDao"/>
	</bean>
	<bean id="representService" class="com.bcnx.web.app.service.RepresentServiceImp">
		<property name="disputeTxnDao" ref="representDao"/>
	</bean>
</beans>
